<%- model_class = Post.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post_path(post) %></h2>
  <p>
    <small>Published at <%=l post.created_at, format: :long %></small>
  </p>
  <%= post.description %>
  <hr>
<% end %>
